{
    "name": "blomstra/digest",
    "description": "Email digests for your forum users",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "require-dev": {
        "flarum/mentions": "*",
        "flarum/subscriptions": "*",
        "flarum/suspend": "*",
        "fof/byobu": "*",
        "flarum/likes": "*",
        "fof/follow-tags": "*",
        "fof/subscribed": "*",
        "flarum/testing": "^1.0.0",
        "symfony/var-dumper": "^6.3"
    },
    "support": {
        "email": "helpdesk@blomstra.net",
        "forum": "https://blomstra.community/t/ext-digest",
        "source": "https://github.com/blomstra/flarum-ext-digest"
    },
    "website": "https://blomstra.community",
    "authors": [
        {
            "name": "Team Blomstra",
            "email": "development@blomstra.net",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Blomstra\\Digest\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Digest",
            "category": "feature",
            "icon": {
                "name": "fas fa-book",
                "backgroundColor": "#EBF1FD",
                "color": "#3a98d0"
            }
        },
        "flarum-cli": {
            "modules": {
                "backendTesting": true,
                "githubActions": true
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blomstra\\Digest\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit -c tests/phpunit.unit.xml",
        "test:integration": "phpunit -c tests/phpunit.integration.xml",
        "test:setup": "@php tests/integration/setup.php"
    },
    "scripts-descriptions": {
        "test": "Runs all tests.",
        "test:unit": "Runs all unit tests.",
        "test:integration": "Runs all integration tests.",
        "test:setup": "Sets up a database for use with integration tests. Execute this only once."
    }
}
